<!doctype html>
<html lang="pl"></html>
    <head>
        <meta charset="utf-8">
    
        <title>Manga shop</title>
        <meta name="description" content="Manga shop">
    
        <link rel="stylesheet" type="text/css" href="style.css">

        <script>
        </script>  
    
    </head>
    
    <body>

        <div class="container">
            <h1>Manga shop</h1>
        
            
            <% if (alert) { %>
                <div class="allert">
                    <%= alert %>
                </div>
            <% } %>

            

            <a class="likeButton" href="/shoppingCart"  >Shopping Cart</a>

            <ul class="list">
                <% mangas.forEach(function(manga){ %>
                    <li>
                        <div>
                            <%= manga._id %>
                        </div>
                        <div>
                            <%= manga.name %>
                        </div>
                        <div>
                            <form  method="POST" action="/add">
                                <input hidden type="text" name="mangaId"  value= <%= manga._id %>>
                                <input hidden type="text" name="mangaName"  value= <%= manga.name %>>
                                <button class="addButton" class="btn btn-primary">Add</button>
                            </form>
                        </div>
                    </li>
                <% }); %>
            </ul>

        </div> 
    </body>

  </html>