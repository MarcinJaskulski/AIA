<!doctype html>
<html lang="pl"></html>
    <head>
        <meta charset="utf-8">
    
        <title>Manga shop</title>
        <meta name="description" content="Manga shop">
    
        <link rel="stylesheet" type="text/css" href="style.css">
    
        <script>
        </script> 
    </head>
    
    <body>

        <div class="container">
            <h1>Order</h1>
        
            <div style=" padding: 10px; ">
                <a class="likeButton" style="float: left;" href="/index" >Index</a>
                <a class="likeButton" style="float: left;" href="/cancelCart">Cancel Cart</a>
                <a class="likeButton" style="float: left;" href="/finalizeOrder">Finalize Order</a>
            </div>
        

        <ul class="list" style="clear: both;">
            <% cart.forEach(function(item){ %>
                <li>
                    <div>
                        <%= item._id %>
                    </div>
                    <div>
                        <%= item.name %>
                    </div>

                    <form  method="POST" action="/remove">
                        <input hidden  type="text" name="mangaId"  value= <%= item._id %>>
                        <input hidden type="text" name="mangaName"  value= <%= item.name %>>
                        <button class="removeButton">Remove</button>
                    </form>
                </li>
            <% }); %>
          </ul>

        </div> 
    </body>

  </html>